generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated/prisma"
}


datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  address   String  @unique
  raffleIds String?

  tickets   Ticket[]
  winnings  Winner[]

  @@map("users")
}

model Raffle {
  id              Int     @id @default(autoincrement())
  title           String
  description     String
  expectedWinners Int
  winningPrice    String
  blockchainId    Int     @unique
  ticketPrice     String
  startNo         Int
  endNo           Int
  endDate         DateTime
  status          String
  takenNos        String?
  chosenData      String?
  totalCollected  String?
  platformFee     String?

  tickets Ticket[]
  winners Winner[]

  @@map("raffles")
}

model Ticket {
  id              Int     @id @default(autoincrement())

  raffleId        Int
  raffle          Raffle  @relation(fields: [raffleId], references: [id], onDelete: Cascade)

  userAddress     String
  user            User    @relation(fields: [userAddress], references: [address], onDelete: Cascade)

  selectedNumbers String
  amountPaid      String
  purchaseDate    DateTime @default(now())

  @@unique([raffleId, userAddress])
  @@map("tickets")
}

model Winner {
  id              Int     @id @default(autoincrement())

  raffleId        Int
  raffle          Raffle  @relation(fields: [raffleId], references: [id], onDelete: Cascade)

  userAddress     String
  user            User?   @relation(fields: [userAddress], references: [address], onDelete: Cascade)

  winningNumbers  String
  amountWon       String
  transactionHash String?

  createdAt       DateTime @default(now())

  @@unique([raffleId, userAddress])
  @@map("winners")
}
