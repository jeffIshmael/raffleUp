generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated/prisma"
}


datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  address String @unique
  raffleIds String? // array of raffleIds and numbers chosen a user has purchased

}

model Raffle {
  id    Int     @id @default(autoincrement())
  title String
  description String
  expectedWinners Int
  winningPrice String
  blockchainId Int
  ticketPrice String
  startNo Int
  endNo Int
  startDate DateTime
  endDate DateTime
  status String
  takenNos String? //json string array of numbers
  chosenData String? // json string showing an object of user and selected numbers
}

